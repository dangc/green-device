<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <properties>
        <property name="prop.dt" value="%Y-%m-%d %H:%i:%s"></property>
        <property name="prop.small.dt" value="%Y-%m-%d %H:%i"></property>
        <property name="prop.date" value="%Y-%m-%d"></property>
        <property name="prop.time" value="%H:%i:%s"></property>
        <property name="prop.dt.plain" value="%Y%m%d%H%i%s"></property>
    </properties>

    <settings>
        <!-- 자동으로 카멜케이스 규칙으로 변환 -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
        <package name="com.nuri.green.device.store.jpo"/>
    </typeAliases>

    <mappers>
        <mapper resource="mybatis/mariadb/AptInfoMapper.xml"/>
        <mapper resource="mybatis/mariadb/CommPointMapper.xml"/>
        <mapper resource="mybatis/mariadb/DeviceMapper.xml"/>
        <mapper resource="mybatis/mariadb/DeviceModelMapper.xml"/>
        <mapper resource="mybatis/mariadb/DeviceStatusMapper.xml"/>
        <mapper resource="mybatis/mariadb/GwMapper.xml"/>
        <mapper resource="mybatis/mariadb/MeasurementPointMapper.xml"/>
        <mapper resource="mybatis/mariadb/MeterMapper.xml"/>
        <mapper resource="mybatis/mariadb/ModemMapper.xml"/>
        <mapper resource="mybatis/mariadb/ServicePointMapper.xml"/>
        <mapper resource="mybatis/mariadb/VendorMapper.xml"/>
        <mapper resource="mybatis/mariadb/UtilityMapper.xml"/>
    </mappers>

</configuration>
